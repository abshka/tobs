# Telegram API настройки (обязательные)
API_ID=your_api_id_here
API_HASH=your_api_hash_here
PHONE_NUMBER=your_phone_number_here

# Пути экспорта
# EXPORT_PATH=./exports
# CACHE_FILE=./tobs_cache.json

# Производительность
PERFORMANCE_PROFILE=balanced
WORKERS=8
DOWNLOAD_WORKERS=12
FFMPEG_WORKERS=4

# Медиа обработка
IMAGE_QUALITY=85
VIDEO_CRF=28
USE_H265=false

# Транскрипция голосовых сообщений (Whisper)
ENABLE_TRANSCRIPTION=true
# Модель для транскрипции (рекомендуется: faster-whisper-small для CPU)
# Доступные модели:
# - faster-whisper-tiny (самая быстрая, низкое качество)
# - faster-whisper-base (быстрая, хорошее качество)
# - faster-whisper-small (⭐ рекомендуется для CPU, сбалансированная)
# - faster-whisper-medium (высокое качество, медленнее)
# - faster-whisper-large-v3 (лучшее качество, требует больше RAM)
TRANSCRIPTION_MODEL=faster-whisper-small
# TRANSCRIPTION_LANGUAGE=ru
TRANSCRIPTION_DEVICE=cpu
TRANSCRIPTION_COMPUTE_TYPE=int8
TRANSCRIPTION_CACHE_ENABLED=true

# Логирование
LOG_LEVEL=INFO

# Дополнительные настройки
EXPORT_COMMENTS=false
REQUEST_DELAY=0.5
DIALOG_FETCH_LIMIT=20

# Прокси (опционально)
# PROXY_TYPE=socks5
# PROXY_ADDR=127.0.0.1
# PROXY_PORT=1080
