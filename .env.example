# Telegram API credentials
API_ID=your_api_id
API_HASH=your_api_hash
PHONE_NUMBER=your_number
SESSION_NAME=telegram_obsidian_session

# Export paths
OBSIDIAN_PATH=your/path/to/folder
MEDIA_SUBDIR=media
USE_ENTITY_FOLDERS=true

# Target chats/channels (comma-separated, leave empty for interactive mode)
EXPORT_TARGETS=""

# Processing options
ONLY_NEW=false
MEDIA_DOWNLOAD=true
VERBOSE=true
MAX_WORKERS=16
MAX_PROCESS_WORKERS=16
CONCURRENT_DOWNLOADS=16
CACHE_SAVE_INTERVAL=100
REQUEST_DELAY=0.5
MESSAGE_BATCH_SIZE=100

# Media optimization
IMAGE_QUALITY=85
VIDEO_CRF=26
VIDEO_PRESET=slower
HW_ACCELERATION=NONE # AMD | INTEL | NVIDIA
USE_H265=false

# Other options
CACHE_FILE=${OBSIDIAN_PATH}./telegram_exporter_cache.json
INTERACTIVE_MODE=true
