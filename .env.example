# Telegram API credentials
API_ID=your_api_id
API_HASH=your_api_hash
PHONE_NUMBER=your_number
SESSION_NAME=tobs_session

# Export paths
EXPORT_PATH=your/path/to/folder
MEDIA_SUBDIR=media
USE_ENTITY_FOLDERS=true

# Target chats/channels (comma-separated, leave empty for interactive mode)
EXPORT_TARGETS=""

# Processing options
ONLY_NEW=true
MEDIA_DOWNLOAD=true
WORKERS=8
EXPORT_COMMENTS=False
CACHE_SAVE_INTERVAL=100
REQUEST_DELAY=0.5
BATCH_SIZE=100

# Media optimization
IMAGE_QUALITY=85
VIDEO_CRF=26
VIDEO_PRESET=slower
HW_ACCELERATION=NONE # AMD | INTEL | NVIDIA
USE_H265=false

# Other options
CACHE_FILE=${EXPORT_PATH}./tobs_exporter_cache.json
INTERACTIVE_MODE=true
LOG_LEVEL=INFO

# Download throttling settings
THROTTLE_THRESHOLD_KBPS=50
THROTTLE_PAUSE_S=30

# Proxy
# PROXY_TYPE=http
# PROXY_ADDR=127.0.0.1
# PROXY_PORT=1080
